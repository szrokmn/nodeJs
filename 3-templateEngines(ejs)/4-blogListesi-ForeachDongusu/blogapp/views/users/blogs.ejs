<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title><%= title %> - Blogapp</title>
</head>
<body>
    
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <div class="container">
            <a href="/" class="navbar-brand">Blogapp</a>
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a href="/blogs" class="nav-link">Blog Listesi</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">

                    <% categories.forEach(function(category) { %>
                        <a href="" class="list-group-item list-group-item-action"> <%= category %>  </a>
                    <% }) %> 

                </div>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%= title %>
                </h1>

                <% blogs.forEach(blog => { %>
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="/static/images/<%=blog.resim  %>" class="img-fluid" alt="">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= blog.baslik %> 
                                    </h5>
                                    <p class="card-text"><%= blog.aciklama %> </p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>


                <!-- pagination -->
                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a href="" class="page-link">Geri</a>
                        </li>
                        <li class="page-item active">
                            <a href="" class="page-link">1</a>
                        </li>
                        <li class="page-item">
                            <a href="" class="page-link">2</a>
                        </li>
                        <li class="page-item">
                            <a href="" class="page-link">3</a>
                        </li>
                        <li class="page-item">
                            <a href="" class="page-link">Ä°leri</a>
                        </li>
                    </ul>
                </nav>               

             
            </div>
        </div>
    </div>

</body>
</html>



